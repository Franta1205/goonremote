<div class="min-h-screen flex items-center justify-center bg-gray-900">
<div class="bg-gray-800 p-8 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 w-full max-w-4xl mt-8">
  <div class="flex items-center mb-6">
    <% if @company.logo.present? %>
      <%= image_tag @company.logo, class: "h-16 w-16 rounded-full" %>
    <% else %>
      <img class="h-16 w-16 rounded-full" src="https://via.placeholder.com/150" alt="Company Logo">
  <% end %>
    <h2 class="ml-4 text-3xl font-bold text-white"><%= @company.name %></h2>
  </div>

  <p class="text-gray-300 mb-6">
    <%= @company.description %>
  </p>

  <div class="mt-4">
    <ul class="mt-2 flex space-x-4 text-gray-300">
      <% if @company.linkedin.present? %>
      <li>
        <a href="<%= @company.linkedin %>" class="text-indigo-400 hover:underline" target="_blank">LinkedIn</a>
      </li>
      <% end %>

      <% if @company.career_page.present? %>
      <li>
        <a href="<%= @company.career_page %>" class="text-indigo-400 hover:underline" target="_blank">Career Page</a>
      </li>
      <% end %>

      <% if @company.x.present? %>
      <li>
        <a href="<%= @company.x %>" class="text-indigo-400 hover:underline" target="_blank">X (Twitter)</a>
      </li>
      <% end %>
    </ul>
  </div>
</div>
</div>

<div class="max-w-4xl mx-auto p-4 mt-10">
  <%= render "jobs/partials/table" %>
</div>

