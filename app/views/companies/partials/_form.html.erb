<%= form_with(model: @company, local: true, class: "max-w-2xl mx-auto") do |f| %>
  <% if @company.errors.any? %>
  <div class="bg-gray-900 text-red-500 p-4 rounded-md mb-4 border border-red-500">
    <h2 class="font-bold">Please fix the following errors:</h2>
    <ul class="list-disc list-inside">
      <% @company.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>


  <div class="space-y-12">
    <div class="border-b border-white/10 pb-12">
      <h2 class="text-base font-semibold leading-7 text-white">Your Companies</h2>

      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="sm:col-span-4">
          <%= f.label :name, "Name *", class:"block text-sm font-medium leading-6 text-white"%>
          <div class="mt-2">
            <div class="flex rounded-md bg-white/5 ring-1 ring-inset ring-white/10 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-500">
              <%= f.text_field :name, class:"flex-1 border-0 bg-transparent py-1.5 pl-1 text-white focus:ring-0 sm:text-sm sm:leading-6"%>
            </div>
          </div>
        </div>

        <div class="sm:col-span-1 sm:col-start-1">
          <%= f.label :career_page, class:"block text-sm font-medium leading-6 text-white"%>
          <div class="mt-2">
            <%= f.text_field :career_page, class:"block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6"%>
          </div>
        </div>

        <div class="sm:col-span-1">
          <%= f.label :website_url, "Website *", required: true, class:"block text-sm font-medium leading-6 text-white"%>
          <div class="mt-2">
            <%= f.text_field :website_url, class:"block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6"%>
          </div>
        </div>

        <div class="sm:col-span-1">
          <%= f.label :linkedin, "Linkedin", class:"block text-sm font-medium leading-6 text-white"%>
          <div class="mt-2">
            <%= f.text_field :linkedin, class:"block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6"%>
          </div>
        </div>

        <div class="sm:col-span-1">
          <%= f.label :x, "X(Twitter)", class:"block text-sm font-medium leading-6 text-white"%>
          <div class="mt-2">
            <%= f.text_field :x, class:"block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6"%>
          </div>
        </div>



        <div class="col-span-full">
          <%= f.label :description, "Description *", class:"block text-sm font-medium leading-6 text-white"%>
          <div class="mt-2">
            <%= f.text_area :description, class:"block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6"%>
          </div>
        </div>

        <div class="col-span-full">
          <label for="file-upload" class="block text-sm font-medium leading-6 text-white">Company Logo</label>
          <div class="mt-2 flex justify-center rounded-lg border border-dashed border-white/25 px-6 py-10">
            <div class="text-center">
              <svg class="mx-auto h-12 w-12 text-gray-500" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M1.5 6a2.25 2.25 0 012.25-2.25h16.5A2.25 2.25 0 0122.5 6v12a2.25 2.25 0 01-2.25 2.25H3.75A2.25 2.25 0 011.5 18V6zM3 16.06V18c0 .414.336.75.75.75h16.5A.75.75 0 0021 18v-1.94l-2.69-2.689a1.5 1.5 0 00-2.12 0l-.88.879.97.97a.75.75 0 11-1.06 1.06l-5.16-5.159a1.5 1.5 0 00-2.12 0L3 16.061zm10.125-7.81a1.125 1.125 0 112.25 0 1.125 1.125 0 01-2.25 0z" clip-rule="evenodd" />
              </svg>
              <div class="mt-4 flex text-sm leading-6 text-gray-400">
                <label for="file-upload" class="relative cursor-pointer rounded-md bg-gray-900 font-semibold text-white focus-within:outline-none focus-within:ring-2 focus-within:ring-indigo-600 focus-within:ring-offset-2 focus-within:ring-offset-gray-900 hover:text-indigo-500">
                  <span>Upload a file</span>
                  <%= f.file_field :logo, id: "file-upload", class: "sr-only", accept: ".jpg,.jpeg,.png,.gif" %>
                </label>
                <p class="pl-1">or drag and drop</p>
              </div>
              <p class="text-xs leading-5 text-gray-400">PNG, JPG, GIF up to 10MB</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-6 flex items-center justify-end gap-x-6">
    <%= f.submit "Save", class:"rounded-md bg-indigo-500 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500"%>
  </div>
<% end %>

